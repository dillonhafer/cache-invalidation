<h1><%= @department.name %></h1>
<hr />

<div class='row'>
  <div class='large-4 columns'>
    <%= render 'expenses/index', expenses: @department.expenses.includes(:location) %>
  </div>

  <div class='large-4 columns'>
    <%= render 'members/index', members: @department.members %>
  </div>

  <div class='large-4 columns'>
    <%= render 'tax_records/index', tax_records: @department.tax_records %>
  </div>
</div>

<hr />
<p class='text-center'><%= Time.now %></p>

<div class='large-4 columns'>
  <%= form_for(Location.first) do |f| %>
  <div class='row'>
    <div class='large-8 columns'>
      <%= f.label :name, "Test the location change" %>
      <%= f.text_field :name %>
    </div>
    <div class='large-4 columns'>
      <br />
      <%= f.submit 'Update', class: 'tiny button radius' %>
    </div>
  </div>
  <% end %>
</div>
